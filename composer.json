{
    "name": "shipmonk/packing",
    "description": "Testing day application stub",
    "require": {
        "ext-pdo": "*",
        "ext-json": "*",
        "php": ">=7.4",
        "psr/http-message": "1.*",
        "guzzlehttp/psr7": "1.*",
        "doctrine/orm": "2.*",
        "doctrine/cache": "1.*",
        "doctrine/annotations": "1.*",
        "symfony/dependency-injection": "^6.1",
        "symfony/yaml": "^6.1",
        "symfony/config": "^6.1",
        "doctrine/doctrine-bundle": "^2.7",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Doctrine\\Bundle\\DoctrineBundle\\": "/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.8",
        "vimeo/psalm": "^4.27"
    },
    "scripts": {
        "cs": "php -d memory_limit=3G ./vendor/bin/phpcs --colors --extensions=php --encoding=utf-8 -sp ./src ./test",
        "stan": "php -d memory_limit=3G ./vendor/bin/phpstan.phar analyse -l max -c ./phpstan.neon -vvv ./src",
        "stan-baseline": "php -d memory_limit=3G ./vendor/bin/phpstan.phar analyse -l max -c ./phpstan.neon -vvv ./src --generate-baseline",
        "psalm": "php ./vendor/bin/psalm"
    }
}
